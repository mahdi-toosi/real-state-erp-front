{
	"stylelint.validate": ["vue"],
	"editor.formatOnSave": true,
	"vetur.validation.template": false,
	"editor.codeActionsOnSave": {
		"source.fixAll.eslint": true
	},
	"[vue]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[javascript]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"cSpell.words": [
		"cancelation",
		"columngroup",
		"datatable",
		"elementable",
		"Elementor",
		"fileupload",
		"Highcharts",
		"inputswitch",
		"jalali",
		"jalaliday",
		"Jeton",
		"Jetons",
		"kishvadi",
		"Kishvandi",
		"organizationchart",
		"orgch",
		"Paids",
		"paymentable",
		"primevue",
		"Promissories",
		"Receiveds",
		"recruitments",
		"saiadi",
		"statementable",
		"stylelint",
		"treetable",
		"useconfirm",
		"vazir",
		"Vuelidate",
		"zarinpal"
	],
	"files.exclude": {
		"**/.git": true,
		"**/.svn": true,
		"**/.hg": true,
		"**/CVS": true,
		"**/.DS_Store": true,
		"**/Thumbs.db": true
	},
	"hide-files.files": [
		"nginx",
		"scripts",
		"public",
		"test",
		"yarn.lock",
		"stylelint.config.js",
		"postcss.config.js",
		"README.md",
		"jest.config.js",
		"Dockerfile.staging",
		"Dockerfile.prod",
		"Dockerfile.dev",
		"commitlint.config.js",
		".env.production",
		".env.staging",
		".eslintrc.js",
		".gitignore",
		".gitlab-ci.yml",
		".lintstagedrc",
		".prettierrc",
		".versionrc.json",
		"build.sh",
		"CHANGELOG.md",
		"index.html",
		"types",
		".dockerignore",
		".babelrc",
		".browserslistrc",
		"tsconfig.json",
		"src/test",
		"src/providers",
		"src/bootstrap.ts",
		"src/component.ts",
		"src/context.ts",
		"src/main.ts",
		"src/router.ts",
		".env.development",
		"src/api.ts",
		"vite.config.ts",
		".husky",
		".lintstagedrc.js",
		"robots.txt",
		"packages",
		".eslintignore",
		".prettierignore",
		".stylelintignore",
		"stats.html",
		"package.json"
	]
}
